<view>
    <view>
        <van-cell-group>
            <van-field
                label="用户名"
                value="{{form.username}}"
                placeholder="请输入用户名"
                required
                clearable
                border="{{ false }}"
                bind:change="onChange1"
            />
            <van-field
                label="密码"
                value="{{form.password}}"
                placeholder="请输入密码"
                type="password"
                required
                clearable
                border="{{ false }}"
                bind:change="onChange2"
            />
        </van-cell-group>
    </view>
    <view>
        <van-row gutter="20">
        <van-col offset="8"><van-button bind:click="submit">提交</van-button></van-col>
        </van-row>
        <van-toast id="van-toast" />
    </view>
    <view class="usermottoBtn">
        <van-button type="primary" bind:click="initButton">查询用户信息</van-button>
        <van-button type="primary" bind:click="initButton">修改用户</van-button>
        <van-button type="primary" bind:click="initButton">注销用户</van-button>
    </view>
</view>